    <script>
        document.getElementById('currentYear').textContent = new Date().getFullYear();

        function formatChartJsLabel(str, maxWidth = 16) {
            if (typeof str !== 'string' || str.length <= maxWidth) return str;
            
            const words = str.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if (currentLine.length === 0) {
                    currentLine = word;
                } else if ((currentLine + ' ' + word).length <= maxWidth) {
                    currentLine += ' ' + word;
                } else {
                    lines.push(currentLine);
                    currentLine = word;
                }
            }
            if (currentLine) {
                lines.push(currentLine);
            }
            return lines.length > 1 ? lines : (lines[0] || str); 
        }
        
        const virtualToursMarketCtx = document.getElementById('virtualToursMarketGrowthChart');
        if (virtualToursMarketCtx) {
            new Chart(virtualToursMarketCtx, {
                type: 'line',
                data: {
                    labels: ['2023', '2025', '2027', '2029', '2032'].map(year => formatChartJsLabel(year)),
                    datasets: [{
                        label: formatChartJsLabel('Virtual Tours Market (Bn$)'),
                        data: [8.89, 24.58, 50.12, 85.78, 127.47],
                        borderColor: '#0072CE', 
                        backgroundColor: 'rgba(0, 114, 206, 0.2)', 
                        borderWidth: 3,
                        pointBackgroundColor: '#003A70',
                        pointBorderColor: '#FFFFFF',
                        pointHoverBackgroundColor: '#FFFFFF',
                        pointHoverBorderColor: '#003A70',
                        pointRadius: 5,
                        pointHoverRadius: 7,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: formatChartJsLabel('Billion USD (Bn$)'),
                                font: { size: 14, weight: '600' },
                                color: '#003A70'
                            },
                            grid: { color: 'rgba(0, 58, 112, 0.1)' },
                            ticks: {
                                color: '#003A70',
                                callback: function(value) { return value + ' Bn$'; }
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: formatChartJsLabel('Year'),
                                font: { size: 14, weight: '600' },
                                color: '#003A70'
                            },
                            grid: { display: false },
                            ticks: { color: '#003A70' }
                        }
                    },
                    plugins: {
                        tooltip: {
                            backgroundColor: '#003A70',
                            titleColor: '#FFFFFF',
                            bodyColor: '#B2EDFF',
                            titleFont: { weight: 'bold', size: 14 },
                            bodyFont: { size: 12 },
                            padding: 12,
                            cornerRadius: 6,
                            displayColors: false,
                            callbacks: {
                                title: function(tooltipItems) {
                                    const item = tooltipItems[0];
                                    let label = item.chart.data.labels[item.dataIndex];
                                    if (Array.isArray(label)) {
                                      return label.join(' ');
                                    }
                                    return label;
                                },
                                label: function(context) {
                                    let datasetLabel = context.dataset.label || '';
                                     if (Array.isArray(datasetLabel)) { 
                                        datasetLabel = datasetLabel.join(' ');
                                    }
                                    let valueLabel = '';
                                    if (context.parsed.y !== null) {
                                        valueLabel = context.parsed.y.toFixed(2) + ' Bn$';
                                    }
                                    return 'Value: ' + valueLabel;
                                }
                            }
                        },
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                color: '#003A70',
                                font: { size: 12 },
                                padding: 15,
                                usePointStyle: true,
                                pointStyle: 'rectRounded',
                                generateLabels: function(chart) {
                                    const original = Chart.defaults.plugins.legend.labels.generateLabels;
                                    const labels = original.call(this, chart);
                                    labels.forEach(label => {
                                        if (Array.isArray(label.text)) {
                                           label.text = label.text.join(' ');
                                        } else {
                                           const formatted = formatChartJsLabel(label.text, 25);
                                           label.text = Array.isArray(formatted) ? formatted.join(' ') : formatted;
                                        }
                                    });
                                    return labels;
                                }
                            }
                        }
                    }
                }
            });
        }
    </script>
